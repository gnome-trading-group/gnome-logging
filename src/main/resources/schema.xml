<?xml version="1.0" encoding="UTF-8"?>
<sbe:messageSchema xmlns:sbe="http://fixprotocol.io/2016/sbe"
                   xmlns:xi="http://www.w3.org/2001/XInclude"
                   package="group.gnometrading.schemas"
                   id="1"
                   version="0"
                   semanticVersion="5.2"
                   description="Schemas used in Gnome Trading Group"
                   byteOrder="littleEndian">
    <types>
        <!-- Common types across all SBE schemas  -->
        <composite name="messageHeader" description="Message identifiers and length of message root.">
            <type name="blockLength" primitiveType="uint16"/>
            <type name="templateId" primitiveType="uint16"/>
            <type name="schemaId" primitiveType="uint16"/>
            <type name="version" primitiveType="uint16"/>
        </composite>

        <type name="timestamp" primitiveType="uint64" nullValue="0" presence="optional" />

        <enum name="LogLevel" encodingType="uint8">
            <validValue name="DEBUG">0</validValue>
            <validValue name="INFO">1</validValue>
            <validValue name="WARN">2</validValue>
            <validValue name="ERROR">3</validValue>
        </enum>

    </types>
    <sbe:message name="LogMessage" id="1">
        <field name="timestampNs" id="1" type="timestamp"/>
        <field name="level"       id="2" type="LogLevel"/>
        <field name="eventCode"   id="3" type="uint16"/>

        <!-- number of integer long args used (0..6) -->
        <field name="argCount" id="4" type="uint8"/>

        <field name="arg0" id="5" type="int64"/>
        <field name="arg1" id="6" type="int64"/>
        <field name="arg2" id="7" type="int64"/>
        <field name="arg3" id="8" type="int64"/>
        <field name="arg4" id="9" type="int64"/>
        <field name="arg5" id="10" type="int64"/>
    </sbe:message>
</sbe:messageSchema>